{
  "compileOnSave": true,
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "typeRoots": [
      "./node_modules/@types",
      "./Scripts/plugins"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
	  "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "./src/main.ts"
  ],
}
